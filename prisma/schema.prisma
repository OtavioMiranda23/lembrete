// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  nickname    String       @unique
  restaurants Restaurant[] @relation("UserRestaurants")
  foodTypes   FoodType[]   @relation("UserFoodType")

  @@map("users")
}

model Restaurant {
  id         String     @id @default(uuid())
  name       String
  street     String?
  num        String?
  region     String?
  avaliation Int?
  foodTypes  FoodType[] @relation("RestaurantFoodType")
  users      User[]     @relation("UserRestaurants")

  @@map("restaurants")
}

model FoodType {
  id          String       @id @default(uuid())
  name        String
  restaurants Restaurant[] @relation("RestaurantFoodType")
  users       User[]       @relation("UserFoodType")

  @@map("food_type")
}
